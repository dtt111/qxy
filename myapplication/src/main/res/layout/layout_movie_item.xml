<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoviesActivity">
    <LinearLayout
        android:id="@+id/FirstLinear"
        android:layout_width="match_parent"
        android:layout_height="145sp"
        android:background="@color/white"
        android:layout_marginTop="8sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/MovieImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white"
            android:paddingLeft="15sp"
            android:paddingRight="20sp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="Suspicious0dp" />

        <LinearLayout
            android:id="@+id/SecondLinear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <TextView
                android:id="@+id/MovieName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="10sp"
                android:text="人生大事"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/MovieScore"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="豆瓣评分R 7.4"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/MovieType"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="剧情 / 治愈"
                android:textColor="@color/gray"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/MovieTime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2022上映"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/MovieNum"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1284.5w"
                android:textColor="@color/gray"
                android:textSize="15sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnBuyTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购票"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="0dp"
            />
    </LinearLayout>
</LinearLayout>